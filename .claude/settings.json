{
  "permissions": {
    "allow": [
      "Bash(pkill:*)",
      "Bash(npm:*)",
      "Bash(pnpm:*)",
      "Bash(uv:*)",
      "Bash(python:*)",
      "Bash(pytest:*)",
      "Bash(git status)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(cat:*)",
      "Bash(docker compose:*)",
      "Bash(docker run:*)",
      "Bash(docker exec:*)",
      "mcp__playwright",
      "mcp__context7",
      "mcp__chrome-devtools",
      "Bash(pnpm fastapi-dev)",
      "Bash(pnpm dev)",
      "Bash(pnpm dev-with-fastapi)",
      "Read(*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(less:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(wc:*)",
      "Bash(file:*)",
      "Bash(touch:*)",
      "Bash(mkdir:*)"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(git push --force:*)",
      "Read(.env)"
    ],
    "ask": [
      "Bash(git push:*)",
      "Bash(git commit:*)"
    ]
  },
  "enabledMcpjsonServers": [
    "shadcn",
    "playwright"
  ],
  "enableAllProjectMcpServers": true,
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/setup_remote.sh",
            "timeout": 60000
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -message 'Claude needs your input' -title 'ðŸ”” Claude Code' -sound Glass -group 'claude-code'"
          }
        ]
      }
    ]
  }
}

