{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Next.js Frontend",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": [
                "dev"
            ],
            "console": "integratedTerminal",
            "env": {
                "NODE_OPTIONS": "--inspect",
                "NEXT_TURBO": "1"
            },
            "serverReadyAction": {
                "pattern": "- Local:.+(https?://.+)",
                "uriFormat": "%s",
                "action": "debugWithChrome"
            },
            "preLaunchTask": "Kill Port 3000"
        },
        {
            "name": "FastAPI Backend",
            "type": "debugpy",
            "request": "launch",
            "module": "hypercorn",
            "args": [
                "api.index:app",
                "--reload",
                "-b",
                "0.0.0.0:8000"
            ],
            "jinja": true,
            "console": "integratedTerminal",
            "justMyCode": false,
            "preLaunchTask": "Prepare FastAPI Backend"
        },
        {
            "name": "Expo App",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": [
                "my-expo-app"
            ],
            "console": "integratedTerminal",
            "serverReadyAction": {
                "pattern": "Web:.+(https?://.+)",
                "uriFormat": "%s",
                "action": "debugWithChrome"
            }
        },
        {
            "name": "Full Stack (FastAPI + Next.js via Script)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": [
                "fastapi-dev"
            ],
            "console": "integratedTerminal",
            "env": {
                "NODE_OPTIONS": "--inspect",
                "NEXT_TURBO": "1"
            },
            "serverReadyAction": {
                "action": "openExternally"
            }
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ],
    "compounds": [
        {
            "name": "Full Stack (Compound)",
            "configurations": [
                "FastAPI Backend",
                "Next.js Frontend",
                // "Expo App"
            ],
            "presentation": {
                "hidden": false,
                "group": "fullstack",
                "order": 1
            },
            "stopAll": true
        }
    ]
} 