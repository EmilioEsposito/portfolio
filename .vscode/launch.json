{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "React Router Frontend",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": [
                "dev"
            ],
            "envFile": "${workspaceFolder}/apps/web-react-router/.env",
            "console": "integratedTerminal",
            "serverReadyAction": {
                "pattern": "âžœ\\s+Local:\\s+(https?://[^\\s]+)",
                "uriFormat": "%s",
                "action": "debugWithChrome"
            },
            "preLaunchTask": "Prepare React Router Frontend"
        },
        {
            "name": "FastAPI Backend",
            "type": "debugpy",
            "request": "launch",
            "module": "hypercorn",
            "args": [
                "api.index:app",
                "--reload",
                "--config",
                "api/hypercorn_config.py"
            ],
            "envFile": "${workspaceFolder}/.env",
            "jinja": true,
            "console": "integratedTerminal",
            "justMyCode": false,
            "preLaunchTask": "Prepare FastAPI Backend"
        },
        {
            "name": "Expo App",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": [
                "my-expo-app"
            ],
            "console": "integratedTerminal",
            "serverReadyAction": {
                "pattern": "Web:.+(https?://.+)",
                "uriFormat": "%s",
                "action": "debugWithChrome"
            },
            "preLaunchTask": "Kill Chrome Debug Sessions"
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ],
    "compounds": [
        {
            "name": "Full Stack (Compound)",
            "configurations": [
                "FastAPI Backend",
                "React Router Frontend"
            ],
            "presentation": {
                "hidden": false,
                "group": "fullstack",
                "order": 1
            },
            "stopAll": true
        }
    ]
} 