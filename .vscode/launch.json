{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Next.js Frontend",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": [
                "dev"
            ],
            "console": "integratedTerminal",
            "env": {
                "NODE_OPTIONS": "--inspect",
                "NEXT_TURBO": "1"
            },
            "serverReadyAction": {
                "pattern": "- Local:.+(https?://.+)",
                "uriFormat": "%s",
                "action": "debugWithChrome"
            }
        },
        {
            "name": "FastAPI Backend",
            "type": "debugpy",
            "request": "launch",
            "module": "hypercorn",
            "args": [
                "api.index:app",
                "--reload",
                "-b",
                "0.0.0.0:8000"
            ],
            "jinja": true,
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Full Stack",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": [
                "dev-with-fastapi"
            ],
            "console": "integratedTerminal",
            "env": {
                "NODE_OPTIONS": "--inspect",
                "NEXT_TURBO": "1"
            },
            "serverReadyAction": {
                "pattern": "- Local:.+(https?://.+)",
                "uriFormat": "%s",
                "action": "debugWithChrome"
            }
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ],
    "compounds": [
        {
            "name": "Full Stack (Compound)",
            "configurations": ["FastAPI Backend", "Next.js Frontend"],
            "presentation": {
                "hidden": false,
                "group": "fullstack",
                "order": 2
            },
            "stopAll": true
        }
    ]
} 