{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Full Stack",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev",
                "--",
                "--turbo"
            ],
            "console": "integratedTerminal",
            "env": {
                "NODE_OPTIONS": "--inspect"
            }
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
} 