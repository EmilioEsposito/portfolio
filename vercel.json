{
  "functions": {
    "api/index.py": {
      "excludeFiles": "{.next,.git,node_modules}/**",
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/api/cron/cron_job_example",
      "schedule": "0 12 * * *"
    },
    {
      "path": "/api/google/gmail/watch/refresh",
      "schedule": "0 7 * * *"
    },
    {
      "path": "/api/cron/check_unreplied_emails",
      "schedule": "0 12 * * *"
    },
    {
      "path": "/api/cron/check_unreplied_emails",
      "schedule": "0 16 * * *"
    },
    {
      "path": "/api/cron/check_unreplied_emails",
      "schedule": "0 21 * * *"
    }
  ],
  "build": {
    "env": {
      "PIP_NO_CACHE_DIR": "off"
    }
  }
}
